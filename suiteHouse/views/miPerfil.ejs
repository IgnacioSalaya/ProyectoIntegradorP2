<!DOCTYPE html>
<html lang="en">
<%- include('./partials/_head') %>
<body>
    <%- include('./partials/_headerLogueado') %>
        <div class="uk-section uk-section-small">
            <div class="uk-container uk-container-small" id="div-card">
                <section class="info-usuario uk-flex uk-flex-around uk-width-1-1">
                    <div class="uk-width-1-3 uk-flex uk-flex-center uk-flex-middle">
                        <img src="/images/foto_perfil_usuarios/<%= usuario.imagenPerfil %>" width="70px" alt="foto de perfil" class="foto-perfil">
                        <!-- usuario es un objeto que tiene la propiedad fotoDePeril, usuario -->
                    </div>
                    <div class="uk-width-2-3 uk-flex uk-flex-column uk-flex-around">
                        <div class="uk-flex uk-flex-middle">
                            <h3 class="uk-margin-remove"><%= usuario.nombreUsuario %> </h3>
                            <a href="/editarPerfil" uk-icon="icon:cog; ratio: 1.2" class="uk-margin-left"></a>
                        </div>
                        <div>
                            <ul class="red-usuario uk-flex uk-flex-between uk-width-1-2">
                                <li><%= usuario.posteos_usuario.length %>  posts</li>
                                <!-- seguido y seguidor son strings o num -->
                            </ul>
                        </div>
                    </div>
               </section>
                <section class="muro uk-flex uk-flex-middle uk-flex-center">
                    <div class="uk-grid uk-child-width-1-3 uk-width-1-1 uk-margin-remove" uk-grid>
                    <% for(let i = 0; i < usuario.posteos_usuario.length; i++) { %>
                        <div class="uk-card uk-card-hover uk-card-body uk-flex uk-flex-column uk-flex-middle uk-flex-center ">
                            <a href="/detallePost/<%= usuario.posteos_usuario[i].id %>" class="link-detalle">
                                <img src="/images/posteos/<%= usuario.posteos_usuario[i].imagenPosteo%>" alt="foto de perfil" class="foto-perfil">
                                <!-- <p class="uk-text-center">Lorem ipsum</p> -->
                                <!-- falta definir rutas -->
                            </a>
                        </div>
                    <% } %>
                </div>
            </section>
        </div>
    </div>
    <%- include('./partials/_footer') %>     
</body>
</html>