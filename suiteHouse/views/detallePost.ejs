<!DOCTYPE html>
<html>

<%- include('./partials/_head') %>

<body>

    <% if (logeado) { %>
    <%- include('./partials/_headerLogueado')%>
    <% } else { %>
    <%- include('./partials/_headerDeslogueado')%>
    <% } %>

    <main>
        <div class="uk-section uk-section-xsmall">
            <div class="uk-container uk-container-large uk-flex uk-flex-middle uk-flex-center">
                <section class="uk-flex uk-width-2-3 detalle-container">
                    <article class="uk-width-2-3 uk-flex uk-flex-center uk-flex-middle detalle-post">
                        <img src="<%= posteo.foto %>" alt="Imagen del post" class="imagen-post ">
                        <!-- posteo es un objeto que tiene la propiedad foto -->
                    </article>
                    <article class="uk-width-1-3 uk-flex uk-flex-column comentarios-detalle">
                        <div class="info-post uk-flex uk-flex-middle">
                            <img src="<%= usuario.fotoDePerfil %>" alt="Foto del usuario">
                            <h3><a href=""><%= usuario.usuario %></a></h3>
                            <!-- usuario es un objeto que tiene la propiedad fotoDePerfil, usuario -->
                        </div>
                        <div class="lista-comentarios">
                            <% for(let i = 0; i < comentario.length; i++) { %>
                                <!-- comentario es un objeto que tiene la propiedad fotoDePerfil (del usuario que comentÃ³),
                                usuario, comentario -->
                            <div class="comentario uk-flex uk-flex-middle uk-margin-small-top">
                                <div class="uk-width-1-4 uk-flex uk-flex-center">
                                    <img src="<%= comentario[i].fotoDePerfil %>" alt="Foto de usuario">
                                </div>
                                <h6 class="uk-margin-remove uk-width-2-4"><a
                                        href=""><%= comentario[i].usuario %></a><%= comentario[i].comentario %></h6>
                                <a href="" uk-icon="icon:heart; ratio: 0.8"
                                    class="uk-width-1-4 uk-text-right icono-meGusta"></a>
                            </div>
                            <% } %>
                        </div>
                        <div class="agregar-comentario uk-flex uk-flex-middle">
                            <form action="" class="uk-text-center">
                                <!-- no deberÃ­a llevar noada el action -->
                                <input type="text" class="uk-input" placeholder="Agregar comentario">
                                <button class="uk-button uk-button-primary uk-margin-small-top"
                                    type="submit">Comentar</button>
                            </form>
                        </div>
                    </article>
                </section>
            </div>
        </div>
    </main>

    <%- include('./partials/_footer') %>

</body>

</html>