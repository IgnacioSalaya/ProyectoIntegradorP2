<!DOCTYPE html>
<html>
<%- include('./partials/_head') %>
<body>
    <%- include('./partials/_headerDeslogueado')%>
        <div class="uk-section uk-section-xsmall">
            <div class="uk-container uk-container-large uk-flex uk-flex-middle uk-flex-center">
                <section class="uk-flex uk-width-2-3 detalle-container">
                    <article class="uk-width-2-3 uk-flex uk-flex-center uk-flex-middle detalle-post">
                        <img src="/images/posteos/<%= posteo.imagenPosteo %>" alt="Imagen del post" class="imagen-post ">
                    </article>
                    <article class="uk-width-1-3 uk-flex uk-flex-column comentarios-detalle">
                        <div class="info-post uk-flex uk-flex-middle">
                            <img src="/images/foto_perfil_usuarios/<%= posteo.usuario_posteo.imagenPerfil %>" width="35px" alt="Foto del usuario">
                            <h3><a href="detalleusuario/<%= posteo.usuario_posteo.id %>"><%= posteo.usuario_posteo.nombreUsuario %></a></h3>
                        </div>
                        <div class="lista-comentarios">
                            <% posteo.comentarios_posteo.forEach((data) => { %>
                                <div class="comentario uk-flex uk-flex-middle uk-margin-small-top">
                                    <div class="uk-width-1-4 uk-flex uk-flex-center">
                                        <img src="/images/foto_perfil_usuarios/<%= data.usuario_comentario.imagenPerfil %>" alt="Foto de usuario">
                                    </div>
                                    <h6 class="uk-margin-remove uk-width-2-4"><a href="/detalleusuario/<%= data.usuario_comentario.id %>"><%= data.usuario_comentario.nombreUsuario %></a><%= data.comentario %></h6>
                                    <a href="" uk-icon="icon:heart; ratio: 0.8" class="uk-width-1-4 uk-text-right icono-meGusta"></a>
                                </div>
                            <% }) %>
                        </div>
                        <div class="agregar-comentario uk-flex uk-flex-middle">
                            <form class="uk-text-center">
                                <input type="text" class="uk-input" placeholder="Agregar comentario">
                                <button class="uk-button uk-button-primary uk-margin-small-top"
                                    type="submit">Comentar</button>
                            </form>
                        </div>
                    </article>
                </section>
            </div>
        </div>
    <%- include('./partials/_footer') %>
</body>
</html>